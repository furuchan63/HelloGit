<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-user-name">

        <img src="<%= "/user_images/#{@user.image_name}" %>" height="50" width="50">

        <p><%= link_to(@user.name,"/users/#{@user.id}") %></p>

      </div>


       <div class="post-content">
        <%= @post.content %>
       </div>


      <div class="post-menus1">
        <%= @post.created_at %>
       <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/posts/#{@post.id}/edit") %>
        <%= link_to("削除", "/posts/#{@post.id}/destroy", method:"post", data: {confirm: "本当に削除しますか？"}) %>
       <% end %>
     </div>

    </div>
  </div>
</div>
