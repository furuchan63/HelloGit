<div class="main user-show">
  <div class="container">
    <h2>User Profile</h2>
    <div class="user">
      <div class="user-show userpage">
       <div class="user-show user-content">
       <img src="<%= "/user_images/#{@user.image_name}" %>" height="100" width="100">


       <span>
         <h2><%= @user.name %></h2>
         <% if @user.id == @current_user.id %>
         <p><%= @user.email %></p>
         <% end %>
       </span>

      </div>
            <div class="user-show editp">
             <% if @user.id == @current_user.id%>
             <%= link_to("編集", "/users/#{@user.id}/edit") %>

             <%= link_to("退会", "/users/#{@user.id}/destroy" ,method:"post", data: {confirm: "本当に退会しますか？"}) %>
             <% end %>
            </div>
     </div>
    </div>
    <div class="past-posts">

    <h3>過去の投稿</h3>

    <% @user.posts.each do|post| %>

    <div class="posts-index-item">
     <div class="post-user-name">

     <%= link_to(post.title, "/posts/#{post.id}") %>
     <p><%= post.created_at %></p>

   </div>

    <% end %>
</div>
</div>
</div>
